<div class="devise-container pt-20 px-40">
  <h2>Welcome!</h2>
  <p class="pl-8 pt-4">- <%= t('.sign_up') %> -</p>

  <div class="flex">
    <div class="flex-1 px-4">
      <%= image_tag "Welcome-bro.png", alt: "新規登録へようこそ" %>
      <a href="https://storyset.com/event" class="text-gray-300">Event illustrations by Storyset</a>
    </div>

    <div class="flex-1 px-4 mb-20">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%# 法人または一般の属性を選択するフォーム %>
        <div class="field">
          <%= f.radio_button :characteristic, :general %>
          <%= f.label :characteristic_general, "個人利用者", class: "mr-4" %>
          <%= f.radio_button :characteristic, :corporation %>
          <%= f.label :characteristic_general, "法人(個人農家/個人飲食店経営の方はこちら)" %>
        </div>

        <%# お名前を入力するフォーム %>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, required: true, placeholder: "50文字以内で入力してください" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, required: true %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions mt-8 text-center">
          <%= f.submit t('.sign_up') %>
        </div>
      <% end %>
    </div>
  </div>
</div>