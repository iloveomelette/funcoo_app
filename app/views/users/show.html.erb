<div class="my-page-wrapper">
	<div class="user-info">
		<%= image_tag check_user_profile_image(current_user) %>
		<%= link_to "アカウント編集", edit_user_registration_path %>
		<p><%= current_user.name %></p>
		<p>現在の Lv. <%= current_user.level %></p>
		<p>経験値 <%= current_user.experience_point %>Exp</p>
		<p>次のレベルまであと <%= current_user.rest_point %>Exp</p>
		<p><%= current_user.introduction %></p>
	</div>

	<div class="user-recipes">
    <p><%= check_user_characteristic(current_user) %></p>
    <% @recipes.each do |recipe| %>
      <%= render "/recipes/recipe", recipe: recipe %>
    <% end %>
	</div>

  <div class="paginate">
    <%= paginate @recipes %>
  </div>
</div>