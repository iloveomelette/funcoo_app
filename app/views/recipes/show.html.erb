<div>
  <%= @recipe.menu_image %>
  <p><%= @recipe.title %></p>
  <p>
    投稿日 <%= l @recipe.created_at %>
    <% if @recipe.created_at != @recipe.updated_at %>
      更新日 <%= l @recipe.updated_at %>
    <% end %>
  </p>
  <p>
    調理時間 <%= @recipe.cooking_time %>分
    目安費用 <%= @recipe.cooking_cost %>円
    カロリー <%= @recipe.calorie %>kcal
  </p>
  <p><%= @recipe.content %></p>
</div>