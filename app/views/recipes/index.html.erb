<section class="py-20">
  <div class="w-4/5 m-auto">
    <div>
      <h1>Search for Recipe</h1>
      <%= search_form_for @q, url: search_recipes_path do |f| %>
        <%= f.label :title_or_content_cont, "タイトルもしくは内容を検索" %>
        <%= f.search_field :title_or_content_cont %><br>
        <%= f.radio_button :cooking_time_lteq, "30" %>30分以内
        <%= f.radio_button :cooking_time_lteq, "60" %>60分以内
        <%= f.radio_button :cooking_time_gt, "60" %>それ以上
        <br>
        <%= f.radio_button :cooking_cost_lteq, "500" %>500円以内
        <%= f.radio_button :cooking_cost_lteq, "1000" %>1000円以内
        <%= f.radio_button :cooking_cost_lteq, "2000" %>2000円以内
        <%= f.radio_button :cooking_cost_gt, "2000" %>それ以上
        <br>
        <%= f.radio_button :calorie_lteq, "500" %>500kcal以下
        <%= f.radio_button :calorie_lteq, "1000" %>1000kcal以下
        <%= f.radio_button :calorie_lteq, "2000" %>2000kcal以下
        <%= f.radio_button :calorie_gt, "2000" %>それ以上
        <br>
        <%= f.check_box :genre_staple_food_eq_any, { multiple: true }, "1", "" %>ごはん
        <%= f.check_box :genre_staple_food_eq_any, { multiple: true }, "2", "" %>パン
        <%= f.check_box :genre_staple_food_eq_any, { multiple: true }, "3", "" %>麺類
        <br>
        <%= f.check_box :genre_main_dish_eq_any, { multiple: true }, "1", "" %>肉料理
        <%= f.check_box :genre_main_dish_eq_any, { multiple: true }, "2", "" %>魚料理
        <%= f.check_box :genre_main_dish_eq_any, { multiple: true }, "3", "" %>卵料理
        <%= f.check_box :genre_main_dish_eq_any, { multiple: true }, "4", "" %>大豆料理
        <br>
        <%= f.check_box :genre_side_dish_eq_any, { multiple: true }, "1", "" %>野菜料理
        <%= f.check_box :genre_side_dish_eq_any, { multiple: true }, "2", "" %>きのこ料理
        <%= f.check_box :genre_side_dish_eq_any, { multiple: true }, "3", "" %>芋料理
        <br>
        <%= f.check_box :genre_country_dish_eq_any, { multiple: true }, "1", "" %>日本料理
        <%= f.check_box :genre_country_dish_eq_any, { multiple: true }, "2", "" %>韓国料理
        <%= f.check_box :genre_country_dish_eq_any, { multiple: true }, "3", "" %>中華料理
        <%= f.check_box :genre_country_dish_eq_any, { multiple: true }, "4", "" %>イタリアン料理
        <%= f.check_box :genre_country_dish_eq_any, { multiple: true }, "5", "" %>アジア料理
        <%= f.check_box :genre_country_dish_eq_any, { multiple: true }, "6", "" %>エスニック料理
        <br>
        <%= f.check_box :genre_staple_food_or_genre_main_dish_or_genre_side_dish_or_genre_country_dish_eq_any, { multiple: true }, "0", "" %>その他
        <br>
        <%= f.submit "検索" %>
      <% end %>
    </div>
    <% if current_user.characteristic == "general" %>
      <div>
        <h1>Recomend for you</h1>
        <div>
          <% if @recommend.menu_image.present? %>
            <%= image_tag @recommend.menu_image.thumb.url %>
          <% else %>
            <%= image_tag @recommend.menu_image.url %>
          <% end %>
        </div>
        <p><%= @recommend.title %></p>
      </div>
    <% end %>
    <div>
      <h1>Recipes</h1>
    </div>
    <div class="grid grid-cols-3 gap-4 my-10">
      <%= render @recipes %>
    </div>
  </div>
  <div><%= paginate @recipes %></div>
</section>